@page
@model Proyectos.App.Presentacion.Proveedores.EditModel
@{
    ViewData["Title"] = "Datos del Proveedor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-primary">Editar proveedor</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-dark">
                <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="proveedor.pro_id" />

                <div class="container" style="padding: 30px">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.pro_nit"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="proveedor.pro_nit" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.pro_nit" class="text-dark"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.pro_nombre"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.pro_nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.pro_nombre" class="text-dark"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.pro_direccion"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.pro_direccion" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.pro_direccion" class="text-dark"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.pro_telefono"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="proveedor.pro_telefono" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.pro_telefono" class="text-dark"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.pro_email"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.pro_email" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.pro_email" class="text-dark"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Actualizar" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
