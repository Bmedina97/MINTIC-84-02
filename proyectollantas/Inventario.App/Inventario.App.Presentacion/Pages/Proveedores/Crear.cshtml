@page
@model Proyectos.App.Presentacion.Proveedores.CrearModel
@{
    ViewData["Title"] = "Crear Nuevo Proveedor";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-primary">Crear un nuevo proveedor</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-dark">
                <div class="container" style="padding: 30px">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.nit"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="proveedor.nit" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.nit" class="text-danger"></span>
                        </div>
                    </div>

                    <br>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.nombre"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <br>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.direccion"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="proveedor.direccion" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.direccion" class="text-danger"></span>
                        </div>
                    </div>

                    <br>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.telefono"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.telefono" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.telefono" class="text-danger"></span>
                        </div>
                    </div>

                    <br>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="proveedor.email"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="proveedor.email" class="form-control" />
                            </div>
                            <span asp-validation-for="proveedor.email" class="text-danger"></span>
                        </div>
                    </div>

                    <br>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Crear" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
